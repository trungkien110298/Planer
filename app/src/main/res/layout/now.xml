<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    // Khai báo bảng chứa dữ liệu của công việc hiện tại
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:stretchColumns="*">
        // Tên công việc
        <TableRow android:background="@color/colorPrimary">

            <TextView
                android:padding="5dp"
                android:text="Work"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nowTaskName"
                android:text="BTL Android"
                android:textSize="20dp" />
        </TableRow>
        //Thời gian bắt đầu
        <TableRow>

            <TextView
                android:padding="5dp"
                android:text="Start time"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nowTaskStartTime"
                android:text="22:00"
                android:textSize="20dp" />
        </TableRow>
        // Thời gian kết thúc
        <TableRow android:background="@color/colorPrimary">

            <TextView
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:text="Finish Time"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nowTaskFinishTime"
                android:text="23:00"
                android:textSize="20dp" />
        </TableRow>
        // Thời gian còn lại
        <TableRow>

            <TextView
                android:padding="5dp"
                android:text="Time Left"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nowTaskTimeLeft"
                android:text="1:00"
                android:textSize="20dp" />
        </TableRow>
    </TableLayout>
    // Nút sửa thông tin công việc
    <Button
        android:id="@+id/editCurrentTaskBtn"
        style="?android:textAppearanceSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="Edit"
        android:textStyle="bold" />
    // Nút xác nhận hoàn thành công việc
    <Button
        android:id="@+id/nowCompleteBtn"
        style="?android:textAppearanceSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="Task Completed"
        android:textStyle="bold"/>
    // Nút chuyển đến công việc tiếp theo
    <Button
        android:id="@+id/nextTask"
        style="?android:textAppearanceSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text="Next Task"
        android:textStyle="bold"/>
    // Hiển thị tiêu đề của công việc tiếp theo cần làm
    <TextView
        android:id="@+id/nextTaskTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" />
</LinearLayout>
